# Unix
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"

# git
alias g="git"
alias gci="git pull --rebase && rake && git push"

# Ruby
alias help-strftime='ruby ~/bin/help-strftime.rb'

# Bundler
alias b="bundle"
alias be="bundle exec"
alias bake="bundle exec rake"

# Rubygems
alias gi="gem install"
alias giv="gem install -v"

# Rails
alias migrate="bundle exec rake db:migrate db:test:prepare"
alias remigrate="bundle exec rake db:migrate db:migrate:redo db:schema:dump db:test:prepare"
alias jammit='bundle exec jammit'

alias killmux='tmux kill-session'
alias m='meteor'
alias m4='meteor --port 4000'
alias m5='meteor --port 5000'
alias v=vagrant
